<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全屏页面主题 -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 全屏弹窗样式 -->
    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsFloating">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <!-- 主题色按钮样式 -->
    <style name="appThemeButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--颜色-->
        <item name="android:textSize">@dimen/sp18</item> <!--字体大小-->
        <item name="colorControlNormal">@color/white</item> <!-- 溢出菜单图标颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <!-- 弹窗风格 自下而上弹出 -->
    <style name="animTranslate">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>
    <!-- 弹窗风格 渐变弹出 -->
    <style name="animAlpha">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>
    <!-- 弹窗风格 放大弹出 -->
    <style name="animScale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
    <!-- 弹窗风格 旋转弹出 -->
    <style name="animRotate">
        <item name="android:windowEnterAnimation">@anim/rotate_in</item>
        <item name="android:windowExitAnimation">@anim/rotate_out</item>
    </style>

    <!-- switch -->
    <style name="SwitchTheme" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/switch_text_selector</item>
        <item name="android:textSize">@dimen/sp10</item>
    </style>

    <!--功能开放中弹窗-->
    <style name="dialog_black">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--TextInputLayout主题风格-->
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colors_0099FF</item>
    </style>
    <!--右滑popupwindow弹出动画-->
    <style name="RightFade" >
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>
</resources>
